<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EVWarrantyManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EVWarrantyManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signalr-styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2 fw-semibold" href="/">
                    <i class="bi bi-ev-front text-primary"></i>
                    <span>EV Warranty Portal</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Admin") || User.IsInRole("EVM Staff"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a></li>
                            }
                            <li class="nav-item"><a class="nav-link" asp-page="/Claims/Index">Claims</a></li>

                            if (User.IsInRole("Admin") || User.IsInRole("SC Staff"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Vehicles/Index">Vehicles</a></li>
                                <li class="nav-item"><a class="nav-link" asp-page="/Customers/Index">Customers</a></li>
                            }

                            if (User.IsInRole("Admin") || User.IsInRole("SC Staff") || User.IsInRole("SC Technician"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Parts/Index">Parts</a></li>
                            }

                            if (User.IsInRole("Admin") || User.IsInRole("EVM Staff") || User.IsInRole("EVM"))
                            {
                                <li class="nav-item"><a class="nav-link" asp-page="/Reports/Index">Reports</a></li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated ?? false)
                        {
                            var username = User.Identity?.Name;
                            var role = User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
<!-- Notification Bell Icon -->                            <li class="nav-item d-flex align-items-center">                                <div class="notification-bell-container">                                    <a href="#" class="notification-bell" id="notification-bell" title="Notifications">                                        <i class="bi bi-bell-fill"></i>                                    </a>                                    <span class="notification-badge" id="notification-badge">0</span>                                </div>                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @username <small class="text-muted">(@role)</small>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item" asp-area="" asp-page="/Account/Logout">Sign out</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Account/Login">Sign in</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top text-center py-3 small text-muted">© 2025 OEM Warranty Portal</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- SignalR Client Library from CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <!-- SignalR Connection Manager -->
    <script src="~/js/signalr-connection.js" asp-append-version="true"></script>
    <script src="~/js/notification-manager.js" asp-append-version="true"></script>

    <!-- Include notification toast partial -->
    <partial name="_NotificationToast" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

