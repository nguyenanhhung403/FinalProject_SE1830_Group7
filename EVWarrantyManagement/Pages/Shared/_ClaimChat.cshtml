@model int
@*
    Claim Chat Partial View
    Can be included in claim details pages to enable real-time messaging
    Usage: <partial name="_ClaimChat" model="@Model.ClaimId" />
*@

<div class="card mt-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-chat-dots"></i> Claim Discussion
        </h5>
    </div>
    <div class="card-body p-0">
        <div class="chat-container">
            <div id="chat-messages"></div>

            <div id="typing-indicator" class="d-none">
                <small class="text-muted"><i class="bi bi-three-dots"></i> Someone is typing...</small>
            </div>

            <div class="chat-input-area">
                <div class="chat-input-group">
                    <textarea id="chat-message-input"
                              class="form-control"
                              placeholder="Type your message..."
                              rows="2"></textarea>
                    <button id="chat-send-button" class="btn btn-primary">
                        <i class="bi bi-send-fill"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize chat for this claim
        let claimChat;

        document.addEventListener('DOMContentLoaded', function () {
            // Get claim ID from model
            const claimId = @Model;

            // Get current user info from page
            const userInfo = {
                userId: '@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value',
                username: '@User.Identity?.Name'
            };

            // Initialize chat
            claimChat = new ClaimChat(claimId);
            claimChat.currentUser = userInfo;
            claimChat.initialize();
        });

        // Clean up on page unload
        window.addEventListener('beforeunload', function () {
            if (claimChat) {
                claimChat.stop();
            }
        });
    </script>
}
