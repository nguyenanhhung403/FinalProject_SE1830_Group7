@page
@model EVWarrantyManagement.Pages.Account.LoginModel
@{
    ViewData["Title"] = "EV Warranty Portal - Sign in";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%; border-radius: 1rem;">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <div class="mb-3">
                    <i class="bi bi-ev-front-fill" style="font-size: 4rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                </div>
                <h3 class="fw-bold mb-1">EV Warranty Portal</h3>
                <p class="text-muted mb-0">Sign in to your account</p>
            </div>
            <form method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="Input.Username" class="form-label fw-semibold">
                        <i class="bi bi-person me-1"></i>Username
                    </label>
                    <input asp-for="Input.Username" class="form-control form-control-lg" autocomplete="username" placeholder="Enter your username" />
                    <span asp-validation-for="Input.Username" class="text-danger small"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="Input.Password" class="form-label fw-semibold">
                        <i class="bi bi-lock me-1"></i>Password
                    </label>
                    <input asp-for="Input.Password" class="form-control form-control-lg" type="password" autocomplete="current-password" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 btn-lg fw-semibold">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                </button>
            </form>
        </div>
        <div class="card-footer bg-transparent text-center py-3 border-top">
            <small class="text-muted">
                <i class="bi bi-shield-check me-1"></i>Powered by OEM Warranty System
            </small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

