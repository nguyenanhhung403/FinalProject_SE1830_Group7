@page
@model EVWarrantyManagement.Pages.Inventory.AdjustStockModel
@{
    ViewData["Title"] = "Adjust Stock";
}

<nav aria-label="breadcrumb" class="mb-2">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-page="/Index"><i class="bi bi-house me-1"></i>Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="Index">Inventory</a></li>
        <li class="breadcrumb-item active" aria-current="page">Adjust Stock</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="mb-0" style="font-size: 1.5rem;">
        <i class="bi bi-arrow-left-right me-2"></i>Adjust Stock
    </h2>
    <a class="btn btn-sm btn-outline-secondary" asp-page="Index">
        <i class="bi bi-arrow-left me-1"></i>Back
    </a>
</div>

@if (TempData["Error"] is string eMsg)
{
    <div class="alert alert-danger alert-dismissible fade show py-2 mb-2" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i><small>@eMsg</small>
        <button type="button" class="btn-close btn-close-sm" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post" class="card shadow-sm">
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="PartId" class="form-label">Part <span class="text-danger">*</span></label>
            <select asp-for="PartId" asp-items="Model.PartsSelectList" class="form-select" required>
                <option value="">-- Select Part --</option>
            </select>
            <span asp-validation-for="PartId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MovementType" class="form-label">Movement Type <span class="text-danger">*</span></label>
            <select asp-for="MovementType" class="form-select" required>
                <option value="IN">IN - Add Stock</option>
                <option value="OUT">OUT - Remove Stock</option>
                <option value="ADJUSTMENT">ADJUSTMENT - Adjust (can be positive or negative)</option>
            </select>
            <span asp-validation-for="MovementType" class="text-danger"></span>
            <small class="form-text text-muted">
                <strong>IN:</strong> Add stock to inventory<br />
                <strong>OUT:</strong> Remove stock from inventory (must have sufficient stock)<br />
                <strong>ADJUSTMENT:</strong> Adjust stock by any amount (positive or negative)
            </small>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
            <input asp-for="Quantity" class="form-control" type="number" min="1" required />
            <span asp-validation-for="Quantity" class="text-danger"></span>
            <small class="form-text text-muted">
                For ADJUSTMENT type, you can use negative values (e.g., -5 to decrease by 5)
            </small>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="form-label">Reason / Note</label>
            <textarea asp-for="Reason" class="form-control" rows="3" placeholder="e.g., Stock count correction, Damaged items, etc."></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-1"></i>Adjust Stock
            </button>
            <a class="btn btn-outline-secondary" asp-page="Index">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Ensure inventory real-time is initialized
        document.addEventListener('DOMContentLoaded', function() {
            if (window.InventoryRealTime) {
                if (!window.inventoryRealTime || !window.inventoryRealTime.isInitialized) {
                    window.inventoryRealTime = new InventoryRealTime();
                    window.inventoryRealTime.initialize();
                }
            }
        });
    </script>
}

