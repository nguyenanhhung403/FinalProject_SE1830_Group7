@page "{id:int}"
@model EVWarrantyManagement.Pages.Claims.EditModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy="RequireEVM")]
@{
    ViewData["Title"] = "Review Claim";
}

<h2 class="mb-3">Review Claim #@Model.Id</h2>

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-4">
        <label asp-for="Input.NewStatus" class="form-label">Status</label>
        <select asp-for="Input.NewStatus" class="form-select">
            <option value="Approved">Approved</option>
            <option value="Rejected">Rejected</option>
            <option value="OnHold">On Hold</option>
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="Input.Cost" class="form-label">Cost (optional)</label>
        <input asp-for="Input.Cost" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="Input.Note" class="form-label"></label>
        <textarea asp-for="Input.Note" class="form-control" rows="4"></textarea>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-page="Index">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

