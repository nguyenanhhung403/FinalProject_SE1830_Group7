@page
@model EVWarrantyManagement.Pages.Claims.ReviewModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Policy="RequireEVM")]
@{
    ViewData["Title"] = "Review Claims";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="/Claims/Index">Claims</a></li>
        <li class="breadcrumb-item active" aria-current="page">Review</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Pending / On Hold Claims</h2>
    <form method="get" class="d-flex gap-2">
        <input class="form-control" type="search" name="q" value="@Model.Q" placeholder="Search Model or Description" />
        <button class="btn btn-outline-secondary" type="submit">Filter</button>
    </form>
</div>

@if (TempData["Success"] is string success)
{
    <div class="alert alert-success">@success</div>
}
@if (TempData["Error"] is string error)
{
    <div class="alert alert-danger">@error</div>
}

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>ClaimID</th>
                <th>Model</th>
                <th>VIN</th>
                <th>Description</th>
                <th>Service Center</th>
                <th>Created</th>
                <th>Status</th>
                <th>Note</th>
                <th class="text-nowrap">Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@(claim.Vehicle?.Model ?? "N/A")</td>
                <td>@claim.Vin</td>
                <td class="text-truncate" style="max-width: 280px;">@claim.Description</td>
                <td>@claim.ServiceCenter?.Name</td>
                <td>@claim.CreatedAt</td>
                <td><span class="badge bg-secondary">@claim.StatusCode</span></td>
                <td>
                    <input form="claim-@claim.ClaimId" name="note" class="form-control form-control-sm" placeholder="Add noteâ€¦" />
                </td>
                <td class="text-nowrap">
                    <form id="claim-@claim.ClaimId" method="post" class="d-inline">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button class="btn btn-sm btn-success" formaction="?handler=Approve" type="submit">Approve</button>
                        <button class="btn btn-sm btn-danger" formaction="?handler=Reject" type="submit">Reject</button>
                        <button class="btn btn-sm btn-warning" formaction="?handler=Hold" type="submit">On Hold</button>
                        <a class="btn btn-sm btn-secondary" asp-page="Details" asp-route-id="@claim.ClaimId">Details</a>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

